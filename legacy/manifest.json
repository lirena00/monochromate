{
  "manifest_version": 3,
  "name": "Monochromate",
  "description": "Control grayscale intensity and exclude elements.",
  "version": "1.1",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Adjust Monochromate Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}
